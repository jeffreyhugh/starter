{
  "name": "ts-nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint components constant lib pages --fix && yarn format",
    "lint:strict": "eslint components constant lib pages --max-warnings=0",
    "typecheck": "tsc --noEmit --incremental false",
    "test:watch": "jest --watch --passWithNoTests",
    "test": "jest --passWithNoTests",
    "test:watch:strict": "jest --watch",
    "text:strict": "jest",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install",
    "precommit": "yarn format && yarn lint:strict && yarn typecheck && yarn format:check"
  },
  "dependencies": {
    "@mdx-js/loader": "^2.1.5",
    "@mdx-js/react": "^2.1.5",
    "@next/mdx": "^12.3.4",
    "@supabase/auth-helpers-nextjs": "^0.4.5",
    "@supabase/auth-helpers-react": "^0.3.1",
    "@supabase/supabase-js": "^2.1.2",
    "@types/react-syntax-highlighter": "^15.5.5",
    "clsx": "^1.2.1",
    "daisyui": "^2.43.0",
    "next": "^12.3.4",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.7.1",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^1.8.0",
    "theme-change": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@svgr/webpack": "^6.5.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-config-next": "^12.3.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "next-sitemap": "^2.5.28",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  }
}
